        body { font-family: 'Inter', sans-serif; background-color: #f7fafc; }
        .splash { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(135deg, #f59e0b, #ef4444, #8b5cf6, #3b82f6); background-size: 400% 400%; display: flex; justify-content: center; align-items: center; animation: gradient-animation 15s ease infinite, splash-out 1s forwards 2s; z-index: 9999; }
        .splash-text { font-family: 'Bangers', cursive; font-size: clamp(2rem, 10vw, 4rem); font-weight: bold; color: white; text-shadow: 4px 4px 10px rgba(0, 0, 0, 0.3); animation: text-pop 0.8s ease-out; }
        @keyframes gradient-animation { 0% { background-position: 0% 50%; } 50% { background-position: 100% 50%; } 100% { background-position: 0% 50%; } }
        @keyframes text-pop { 0% { transform: scale(0.5); opacity: 0; } 80% { transform: scale(1.1); opacity: 1; } 100% { transform: scale(1); } }
        @keyframes splash-out { 0% { opacity: 1; transform: scale(1); } 100% { opacity: 0; transform: scale(1.2); visibility: hidden; } }
        .recipe-card { transition: transform 0.3s ease, box-shadow 0.3s ease; }
        .recipe-card:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2); }
