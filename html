    </main>

    <section id="recipe-details" class="hidden container mx-auto px-4 py-8">
        <div class="bg-white rounded-lg shadow-lg p-6">
            <button id="back-btn" class="mb-4 bg-gray-200 px-4 py-2 rounded-lg hover:bg-gray-300">‚Üê Back</button>
            <h2 id="details-title" class="text-3xl font-bold mb-4 font-['Bangers']"></h2>
            <h3 class="text-xl font-semibold mb-2">Ingredients:</h3>
            <ul id="details-ingredients" class="list-disc list-inside mb-4"></ul>
            <h3 class="text-xl font-semibold mb-2">Instructions:</h3>
            <p id="details-instructions" class="text-gray-700"></p>
        </div>
